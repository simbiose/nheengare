<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewTranslation"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/empty"
        android:src="@drawable/nu_24" />

    <TextView
        android:id="@+id/textViewTranslation"
        style="@style/AppTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/progressBarTranslation"
        android:layout_toRightOf="@+id/imageViewTranslation"
        android:ellipsize="marquee"
        android:text="@string/app_name" />

    <ProgressBar
        android:id="@+id/progressBarTranslation"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/link" />

</RelativeLayout>
